<% include ./partials/header %>


<div class="ui main text container">
        <div id="indexh"class="ui huge header">OpenBlog App</div>
        <div class="ui category search">
        <div class="ui icon input">
      <input class="prompt" type="text" placeholder="Search Topics...">
          <i class="search icon"></i>
      </div>
       <div class="results"></div>
      </div>
            <div class="ui top attached segment">
                <div class="ui divided items">
                      <% blogs.reverse().forEach(function(blog){ %>
                        <div class="item"> 
                           <div class="image">
                               <img src="<%=blog.image%>">
                           </div>
                         <div class="content">
                             <a class="header" href="/blogs/<%=blog._id%>"><%= blog.title %></a>
                               <div class="meta">
                                   <span><%=blog.created.toDateString()%>,</span>
                                   <span>Author: <b><%=blog.author.username%></b></span>
                               </div>
                             <div class="description">
                                 <p><%=blog.body.substring(0,160)%>...</p>
                             </div>
                             <div class="extra">
                                   <a class="ui floated basic violet button" href="/blogs/<%=blog._id%>">
                                   Read More<i class="right chevron icon"></i>
                                   </a>
                             </div>
                         </div>
        
    </div>


<% }); %>

            
        </div>
    </div>
    
</div>



<% include ./partials/footer %>